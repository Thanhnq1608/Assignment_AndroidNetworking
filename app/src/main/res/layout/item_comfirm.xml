        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="confirm email"
        android:id="@+id/btn_sendEmail"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
